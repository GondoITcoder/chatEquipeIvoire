<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="1dp"
    app:cardBackgroundColor="#29DCDCDC"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="9dp"
        android:paddingVertical="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_amis"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/avatar_amis"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gondo Eric Dorgeles"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:lines="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/iv_amis" />

        <TextView
            android:id="@+id/tv_dernier_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salut boss"
            android:textSize="15sp"
            android:textColor="@color/colorSecondary"
            android:lines="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/iv_amis"/>

        <TextView
            android:id="@+id/tv_heure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:13"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:lines="1"
            android:layout_marginStart="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>